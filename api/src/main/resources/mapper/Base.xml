<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="base">

    <select id="getSeq" resultType="com.aniserver.api.model.db.Seq">
        select *
          from seq
         where seq.name = '${name}'
    </select>

    <update id="updateSeq" parameterType="com.aniserver.api.model.db.Seq">
        update seq
           set next = ${next}
         where seq.name = '${name}'
    </update>

</mapper>